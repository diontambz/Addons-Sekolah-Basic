<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mata_pelajaran_form" model="ir.ui.view">
        <field name="name">addons_sekolah.mata_pelajaran.form</field>
        <field name="model">addons_sekolah.mata_pelajaran</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="jurusan"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mata_pelajaran_tree" model="ir.ui.view">
        <field name="name">addons_sekolah.mata_pelajaran.tree</field>
        <field name="model">addons_sekolah.mata_pelajaran</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="jurusan"/>
            </tree>
        </field>
    </record>

    <record id="action_mata_pelajaran" model="ir.actions.act_window">
        <field name="name">Mata Pelajaran</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">addons_sekolah.mata_pelajaran</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>